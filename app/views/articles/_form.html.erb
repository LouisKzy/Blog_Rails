<%= form_with(model: article, class: "container") do |form| %>
  <% if article.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row d-flex justify-content-center">
    <div class="col-md-8 px-2 py-4 border rounded">
      <div class="m-4">
        <div class="mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control m-auto" %>
        </div>
        <div class="mb-3">
          <%= form.label :content, class: "form-label" %>
          <%= form.text_area :content, class: "form-control m-auto" %>
        </div>
        <div class="d-flex justify-content-between">
          <%= form.submit "Save", class: "btn btn-success" %>
          <%= @article.new_record? ? '' : link_to("Show Article", @article, class: "btn btn-primary") %>
          <%= link_to "Back to articles", articles_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
