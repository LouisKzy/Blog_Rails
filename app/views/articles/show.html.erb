
<p style="color: green"><%= notice %></p>
<div class="row d-flex justify-content-center">
  <h2 class="text-center m-5">Show Article</h2>
  <div class="col-md-5 px-2 py-4 border rounded">
    <div class="m-3 text-center">
      <h4 class="card-title m-2"><%= @article.title %></h4>
      <div class="card m-4 bg-light">
        <div class="card-body m-3">
          <p class="card-text m-2"><%= @article.content %></p>
        </div>
        <div class="d-flex justify-content-between mx-5 m-y2"> 
          <%= link_to "Show this article", @article, class: "btn btn-success m-3" %>
          <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary m-3" %>
          <%= link_to "Back to articles", articles_path, class: "btn btn-secondary m-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
